
<div class="starredList">
  <h2>Starred</h2>
  {{#each model as |email|}}
    {{#if email.starred}}
      <SingleEmail
        @email={{email}}
        />
    {{/if}}
  {{/each}}
</div>
<div class="unstarredList">
  <h2>Unstarred</h2>
  {{#each model as |email|}}
  {{#if email.starred}}
  {{else}}
    <SingleEmail
      @email={{email}} @isStarred ={{false}}
    />
  {{/if}}
  {{/each}}
</div>


